<body>

  <div class="card">
    <h1>Motor Capacitor Calculator</h1>

    <label class="block mb-2">Motor Power (HP or kW)</label>
    <input id="motorPower" type="number" class="w-full p-2 rounded mb-3" placeholder="Enter Motor Power">

    <label class="block mb-2">Motor Voltage (V)</label>
    <input id="motorVoltage" type="number" class="w-full p-2 rounded mb-3" placeholder="Enter Motor Voltage">

    <label class="block mb-2">Frequency (Hz)</label>
    <input id="frequency" type="number" class="w-full p-2 rounded mb-3" placeholder="50 or 60 Hz">

    <button onclick="calculateMotorCaps()" class="w-full bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-4 rounded">
      Calculate Starting & Running Capacitors
    </button>

    <div id="motorResult" class="mt-4 text-center font-semibold"></div>
  </div>

  <div class="card">
    <h1>Series / Parallel Capacitor Calculator</h1>
    <label class="block mb-2">Enter Capacitor Values (µF, comma separated)</label>
    <input id="capsInput" type="text" class="w-full p-2 rounded mb-3" placeholder="Ex: 10, 20, 30">

    <button onclick="calculateSeries()" class="w-full bg-green-500 hover:bg-green-600 text-black font-bold py-2 px-4 rounded mb-2">
      Calculate Series
    </button>
    <button onclick="calculateParallel()" class="w-full bg-blue-500 hover:bg-blue-600 text-black font-bold py-2 px-4 rounded">
      Calculate Parallel
    </button>

    <div id="capsResult" class="mt-4 text-center font-semibold"></div>
  </div>

<script>
function calculateMotorCaps() {
  let P = parseFloat(document.getElementById("motorPower").value);
  let V = parseFloat(document.getElementById("motorVoltage").value);
  let f = parseFloat(document.getElementById("frequency").value);

  if (isNaN(P) || isNaN(V) || isNaN(f)) {
    document.getElementById("motorResult").innerHTML = "⚠️ Please fill all fields.";
    return;
  }

  // Convert HP to kW if needed (approx 1 HP = 0.746 kW)
  if (P > 100) { // assume entered in Watts
    P = P / 1000;
  }

  let C_run = (P * 1000) / (2 * Math.PI * f * V * V) * 1e6; // µF
  let C_start = 3 * C_run;

  document.getElementById("motorResult").innerHTML =
    `⚡ Running Capacitor ≈ <span class="text-yellow-300">${C_run.toFixed(2)} µF</span><br>
     🚀 Starting Capacitor ≈ <span class="text-yellow-300">${C_start.toFixed(2)} µF</span>`;
}

function calculateSeries() {
  let values = document.getElementById("capsInput").value.split(",").map(Number);
  if (values.some(isNaN)) {
    document.getElementById("capsResult").innerHTML = "⚠️ Enter valid numbers.";
    return;
  }
  let invSum = values.reduce((a, c) => a + 1/c, 0);
  let C_eq = 1 / invSum;
  document.getElementById("capsResult").innerHTML = `🔗 Series Equivalent: <span class="text-green-300">${C_eq.toFixed(2)} µF</span>`;
}

function calculateParallel() {
  let values = document.getElementById("capsInput").value.split(",").map(Number);
  if (values.some(isNaN)) {
    document.getElementById("capsResult").innerHTML = "⚠️ Enter valid numbers.";
    return;
  }
  let C_eq = values.reduce((a, c) => a + c, 0);
  document.getElementById("capsResult").innerHTML = `🔗 Parallel Equivalent: <span class="text-blue-300">${C_eq.toFixed(2)} µF</span>`;
}
</script>

</body>
